{
  "name": "vite-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite serve --host",
    "build": "tsc && npm run build:client && npm run build:server",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --outDir dist/server --ssr",
    "preview": "vite preview",
    "clear": "rimraf dist && rimraf node_modules",
    "lint": "eslint --ext .jsx,.tsx --fix src",
    "upgrade": "pnpm update",
    "start:ssr": "NODE_ENV=production node pre-server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ui": "workspace:0.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@vitejs/plugin-react-swc": "^3.1.0",
    "sass": "^1.58.0",
    "vite": "^4.1.1"
  }
}
