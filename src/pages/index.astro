---
import Layout from '../layouts/Layout.astro';
const title = 'Astro';
---

<Layout title={title}>
  <h1>Welcome to
    <span class='text-gradient'>{title}</span>
  </h1>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
    max-width: 60ch;
  }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
</style>
