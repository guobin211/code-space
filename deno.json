{
  "enable": true,
  "unstable": true,
  "importMap": "import_map.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "deno.window"
    ],
    "strict": true
  },
  "lint": {
    "files": {
      "include": [
        "packages/**/src",
        "packages/**/__test__"
      ],
      "exclude": [
        "node_modules",
        "target",
        "pkg",
        "dist",
        "build",
        "lib",
        "es",
        "leetcode"
      ]
    },
    "rules": {
      "exclude": [
        "no-unused-vars"
      ]
    }
  },
  "fmt": {
    "files": {
      "include": [
        "packages/**/src",
        "packages/**/__test__",
        "__scripts__"
      ],
      "exclude": [
        "node_modules",
        "target",
        "pkg",
        "dist",
        "build",
        "lib",
        "es",
        "leetcode"
      ]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
