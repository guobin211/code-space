{
  "name": "code-space",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint && eslint --ext .js,.ts ./scripts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clear": "turbo run clear",
    "update:all": "turbo run upgrade",
    "coverage": "vitest run --coverage",
    "tsnode": "ts-node-esm",
    "test": "vitest run",
    "prepare": "husky install",
    "turbo": "turbo"
  },
  "type": "module",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.22",
    "@swc/wasm": "^1.3.22",
    "@types/node": "^18.11.14",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "turbo": "latest",
    "typescript": "^4.9.4",
    "vite": "^4.0.1",
    "vitest": "^0.25.7"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  }
}
