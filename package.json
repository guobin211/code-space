{
  "name": "code-space",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,scss}\"",
    "clear": "turbo run clear",
    "update:all": "turbo run upgrade",
    "coverage": "vitest run --coverage",
    "test": "vitest run",
    "prepare": "husky install",
    "turbo": "turbo"
  },
  "type": "module",
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.44",
    "@swc/wasm": "^1.3.44",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.32",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "prettier": "^2.8.7",
    "rimraf": "^3.0.2",
    "turbo": "^1.8.8",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vitest": "^0.25.8"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  }
}
